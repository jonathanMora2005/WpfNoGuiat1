<Window x:Class="WpfNoGuiat1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfNoGuiat1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Content="b1" Width="100" Height="30"  
        Margin="10" Grid.Row="1" Grid.Column="0" Click="Click"/>
        
        <Button Content="b2" Width="100" Height="30" 
        Margin="10" Grid.Row="1" Grid.Column="1"/>
        <CheckBox Name="Checkbox" Content="0" 
       Margin="10,40,0,0" VerticalAlignment="Top" 
       />
        

    </Grid>
</Window>
